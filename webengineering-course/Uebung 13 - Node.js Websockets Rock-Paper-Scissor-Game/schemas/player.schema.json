{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Player",
  "description": "A Rock Scissors Paper game player",
  "type": "object",
  "properties": {
    "name": {
      "description": "The player's name",
      "type": "string",
      "minLength": 1
    },
    "choice": {
      "description": "The player's choice",
      "type": "string",
      "enum": [
        "Rock",
        "Scissors",
        "Paper"
      ]
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}
